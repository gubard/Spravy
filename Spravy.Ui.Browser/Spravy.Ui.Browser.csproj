<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <RuntimeIdentifier>browser-wasm</RuntimeIdentifier>
        <WasmMainJSPath>AppBundle\main.js</WasmMainJSPath>
        <OutputType>Exe</OutputType>
        <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
        <Nullable>enable</Nullable>
        <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
        <PublishTrimmed>false</PublishTrimmed>
        <IsTrimmable>false</IsTrimmable>
        <TrimMode>partial</TrimMode>
    </PropertyGroup>

    <ItemGroup>
        <WasmExtraFilesToDeploy Include="AppBundle\**" />

        <WasmExtraFilesToDeploy Include="..\Spravy.Ui\Assets\Images\Logo.ico" >
            <Link>AppBundle/favicon.ico</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </WasmExtraFilesToDeploy>

        <WasmExtraFilesToDeploy Include="..\Spravy.Ui\Assets\Images\Logo.svg" >
            <Link>AppBundle/Logo.svg</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </WasmExtraFilesToDeploy>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia.Browser" Version="11.0.5" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Spravy.Ui\Spravy.Ui.csproj" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="appsettings.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </EmbeddedResource>
    </ItemGroup>
</Project>
