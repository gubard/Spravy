<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <RuntimeIdentifier>browser-wasm</RuntimeIdentifier>
        <WasmMainJSPath>AppBundle\main.js</WasmMainJSPath>
        <OutputType>Exe</OutputType>
        <Nullable>enable</Nullable>
        <LinkDuringPublish>false</LinkDuringPublish>
    </PropertyGroup>

    <ItemGroup>
        <WasmExtraFilesToDeploy Include="AppBundle\**" />

        <WasmExtraFilesToDeploy Include="..\Spravy.Ui\Assets\Images\Logo.svg" >
            <Link>AppBundle/Logo.svg</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </WasmExtraFilesToDeploy>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia.Browser" Version="11.0.5" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Spravy.Ui\Spravy.Ui.csproj" />
    </ItemGroup>

    <ItemGroup>
        <LinkerDescriptor Include="ILLink.Descriptors.xml" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="appsettings.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </EmbeddedResource>
    </ItemGroup>
</Project>
