<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Spravy.Ui.ViewModels"
             xmlns:dh="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:s="clr-namespace:Spravy.Ui.Services"
             xmlns:views="clr-namespace:Spravy.Ui.Views"
             mc:Ignorable="d" d:DesignWidth="425" d:DesignHeight="700"
             x:Class="Spravy.Ui.Views.MainView"
             x:DataType="vm:MainViewModel">
    <Panel>
        <ContentControl Content="{Binding MainProgressBar}" ZIndex="100" VerticalAlignment="Top" />

        <dh:DialogHost Name="{x:Static views:MainView.ErrorDialogHostName}"
                       Classes="adaptive-dialog-host"
                       Identifier="{x:Static s:DialogViewer.ErrorDialogHostIdentifier}">
            <dh:DialogHost Name="{x:Static views:MainView.ProgressDialogHostName}"
                           Classes="adaptive-dialog-host"
                           Identifier="{x:Static s:DialogViewer.ProgressDialogHostIdentifier}">
                <dh:DialogHost Name="{x:Static views:MainView.InputDialogHostName}"
                               Classes="adaptive-dialog-host"
                               Identifier="{x:Static s:DialogViewer.InputDialogHostIdentifier}">
                    <dh:DialogHost Name="{x:Static views:MainView.ContentDialogHostName}"
                                   Classes="adaptive-dialog-host"
                                   Identifier="{x:Static s:DialogViewer.ContentDialogHostIdentifier}">
                        <ContentControl Name="{x:Static views:MainView.MainContentName}"
                                        Content="{Binding MainSplit}" />
                    </dh:DialogHost>
                </dh:DialogHost>
            </dh:DialogHost>
        </dh:DialogHost>
    </Panel>
</UserControl>