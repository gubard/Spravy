<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Spravy.Ui.ViewModels"
             xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:services="clr-namespace:Spravy.Ui.Services"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Spravy.Ui.Views.MainView"
             x:DataType="vm:MainViewModel">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <Interaction.Behaviors>
        <EventTriggerBehavior EventName="Initialized">
            <InvokeCommandAction Command="{Binding InitializedCommand}" />
        </EventTriggerBehavior>
    </Interaction.Behaviors>

    <dialogHostAvalonia:DialogHost Identifier="{x:Static services:DialogViewer.ErrorDialogHostIdentifier}">
        <dialogHostAvalonia:DialogHost Identifier="{x:Static services:DialogViewer.ProgressDialogHostIdentifier}">
            <dialogHostAvalonia:DialogHost Identifier="{x:Static services:DialogViewer.InputDialogHostIdentifier}">
                <dialogHostAvalonia:DialogHost
                    Identifier="{x:Static services:DialogViewer.ContentDialogHostIdentifier}">
                    <ContentControl Content="{Binding SplitView}" />
                </dialogHostAvalonia:DialogHost>
            </dialogHostAvalonia:DialogHost>
        </dialogHostAvalonia:DialogHost>
    </dialogHostAvalonia:DialogHost>
</UserControl>