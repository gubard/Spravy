<reactiveUi:ReactiveUserControl x:TypeArguments="viewModels:ChangeToDoItemOrderIndexViewModel"
                                xmlns="https://github.com/avaloniaui"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:viewModels="clr-namespace:Spravy.Ui.ViewModels"
                                xmlns:reactiveUi="http://reactiveui.net"
                                mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                                x:Class="Spravy.Ui.Views.ChangeToDoItemOrderIndexView"
                                x:DataType="viewModels:ChangeToDoItemOrderIndexViewModel">
    <Design.DataContext>
        <viewModels:ChangeToDoItemOrderIndexViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Before" Classes="center" />
            <ToggleSwitch IsChecked="{Binding IsAfter}" />
            <TextBlock Text="After" Classes="center" />
        </StackPanel>

        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Items}"
                 SelectionMode="Single"
                 SelectedItem="{Binding SelectedItem}" />
    </Grid>
</reactiveUi:ReactiveUserControl>