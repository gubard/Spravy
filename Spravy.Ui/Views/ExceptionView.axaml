<ru:ReactiveUserControl x:TypeArguments="vm:ExceptionViewModel"
                        xmlns="https://github.com/avaloniaui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:ru="http://reactiveui.net"
                        xmlns:vm="clr-namespace:Spravy.Ui.ViewModels"
                        mc:Ignorable="d" d:DesignWidth="425" d:DesignHeight="700"
                        x:Class="Spravy.Ui.Views.ExceptionView"
                        x:DataType="vm:ExceptionViewModel">
    <TextBox Text="{Binding FullExceptionText}"
             Classes="accepts-return read-only text-wrapping-wrap" />
</ru:ReactiveUserControl>