<ru:ReactiveUserControl x:TypeArguments="vm:EditDescriptionViewModel"
                        xmlns="https://github.com/avaloniaui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:ru="http://reactiveui.net"
                        xmlns:vm="clr-namespace:Spravy.Ui.ViewModels"
                        xmlns:c="clr-namespace:Spravy.Ui.Controls"
                        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
                        x:Class="Spravy.Ui.Views.EditDescriptionView"
                        x:DataType="vm:EditDescriptionViewModel">
    <ScrollViewer Classes="mini" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <c:GroupBoxControl>
            <c:GroupBoxControl.Header>
                <TextBlock Text="{Binding ToDoItemName}" Classes="h4" />
            </c:GroupBoxControl.Header>

            <ContentControl Content="{Binding Content}" />
        </c:GroupBoxControl>
    </ScrollViewer>
</ru:ReactiveUserControl>