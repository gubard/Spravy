<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Spravy.Ui.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Spravy.Ui.Views.MainSplitView"
             x:DataType="vm:MainSplitViewModel">
    <SplitView x:Name="MainSplit"
               Pane="{Binding Pane}"
               IsPaneOpen="{Binding IsPaneOpen}"
               OpenPaneLength="320"
               PanePlacement="Left">
        <Grid RowDefinitions="Auto,*,Auto">
            <Rectangle Height="34" Fill="{DynamicResource SystemControlHighlightListAccentHighBrush}" />
            <ContentControl Grid.Row="1" Content="{Binding Content}" />
            <Rectangle Grid.Row="2" Height="10" Fill="{DynamicResource SystemControlHighlightListAccentHighBrush}" />
        </Grid>
    </SplitView>
</UserControl>