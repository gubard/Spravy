<ru:ReactiveUserControl x:TypeArguments="vm:SettingViewModel"
                        xmlns="https://github.com/avaloniaui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:ru="http://reactiveui.net"
                        xmlns:vm="clr-namespace:Spravy.Ui.ViewModels"
                        xmlns:h="clr-namespace:Spravy.Ui.Helpers"
                        xmlns:c="clr-namespace:Spravy.Ui.Controls"
                        xmlns:ai="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
                        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                        x:Class="Spravy.Ui.Views.SettingView"
                        x:DataType="vm:SettingViewModel">
    <UserControl.Styles>
        <Style Selector="Border.adaptive-card">
            <Setter Property="(Interaction.Behaviors)">
                <BehaviorCollectionTemplate>
                    <BehaviorCollection>
                        <AdaptiveBehavior SourceControl="{Binding $parent[TopLevel]}">
                            <AdaptiveClassSetter MinWidth="{x:Static h:MaterialDesignSize.MinMedium}"
                                                 MaxWidth="Infinity"
                                                 ClassName="card" />
                        </AdaptiveBehavior>
                    </BehaviorCollection>
                </BehaviorCollectionTemplate>
            </Setter>
        </Style>
        
        <Style Selector="ItemsControl.adaptive-items-control">
            <Setter Property="(Interaction.Behaviors)">
                <BehaviorCollectionTemplate>
                    <BehaviorCollection>
                        <AdaptiveBehavior SourceControl="{Binding $parent[TopLevel]}">
                            <AdaptiveClassSetter MinWidth="{x:Static h:MaterialDesignSize.MinMedium}"
                                                 MaxWidth="Infinity"
                                                 ClassName="wrap-panel" />
                        </AdaptiveBehavior>
                    </BehaviorCollection>
                </BehaviorCollectionTemplate>
            </Setter>
        </Style>

        <Style Selector="Border.card">
            <Setter Property="Width" Value="300" />
            <Setter Property="Height" Value="150" />
        </Style>

        <!--<Style Selector="Button.adaptive-commands-button">
            <Setter Property="(Interaction.Behaviors)">
                <BehaviorCollectionTemplate>
                    <BehaviorCollection>
                        <AdaptiveBehavior SourceControl="{Binding $parent[TopLevel]}">
                            <AdaptiveClassSetter MinWidth="0"
                                                 MaxWidth="{x:Static h:MaterialDesignSize.MinMedium}"
                                                 ClassName="small-adaptive-commands-button" />
                            <AdaptiveClassSetter MinWidth="{x:Static h:MaterialDesignSize.MinMedium}"
                                                 MaxWidth="Infinity"
                                                 ClassName="wide-adaptive-commands-button" />
                        </AdaptiveBehavior>
                    </BehaviorCollection>
                </BehaviorCollectionTemplate>
            </Setter>
        </Style>-->
    </UserControl.Styles>

    <c:BusyAreaControl IsBusy="{Binding IsBusy}">
        <Grid RowDefinitions="*,Auto">
            <ScrollViewer Classes="mini">
                <c:GroupBoxControl>
                    <c:GroupBoxControl.Header>
                        <Grid ColumnDefinitions="Auto,*">
                            <StackPanel Orientation="Horizontal">
                                <Button Command="{x:Static h:UiHelper.SwitchPane}">
                                    <ai:MaterialIcon Kind="Menu" />
                                </Button>

                                <ContentControl Content="{x:Static h:UiHelper.NavigateToCurrentToDoItem}" />
                            </StackPanel>

                            <ScrollViewer Grid.Column="1"
                                          VerticalScrollBarVisibility="Disabled"
                                          HorizontalScrollBarVisibility="Auto"
                                          HorizontalAlignment="Left"
                                          Classes="mini">
                                <TextBlock Text="{DynamicResource SettingView.Header}" />
                            </ScrollViewer>
                        </Grid>
                    </c:GroupBoxControl.Header>

                    <ItemsControl Classes="adaptive-items-control">
                        <Border Classes="adaptive-card">
                            <c:GroupBoxControl Header="Account Setting">
                                <StackPanel>
                                    <TextBlock Classes="field"
                                               Text="{DynamicResource SettingView.Login}" />
                                    <c:CopiedTextControl Text="{Binding AccountNotify.Login}" />

                                    <Grid ColumnDefinitions="*,*">
                                        <Button Classes="mode-press"
                                                Content="{DynamicResource SettingView.ChangePassword}"
                                                Command="{Binding ChangePasswordCommand.Command}" />
                                        <Button Grid.Column="1"
                                                Classes="mode-press"
                                                Content="{DynamicResource SettingView.DeleteAccount}"
                                                Command="{Binding DeleteAccountCommand.Command}" />
                                    </Grid>
                                </StackPanel>
                            </c:GroupBoxControl>
                        </Border>

                        <Border Classes="adaptive-card">
                            <c:GroupBoxControl Header="Base Theme">
                                <c:EnumSelectorControl Classes="alignment-center"
                                                       SelectedEnum="{Binding SelectedTheme}" />
                            </c:GroupBoxControl>
                        </Border>

                        <Border Classes="adaptive-card">
                            <c:GroupBoxControl Header="Application Info">
                                <StackPanel>
                                    <TextBlock Classes="field"
                                               Text="{DynamicResource SettingView.Version}" />
                                    <c:CopiedTextControl Text="{Binding Version}" />
                                </StackPanel>
                            </c:GroupBoxControl>
                        </Border>
                    </ItemsControl>
                </c:GroupBoxControl>
            </ScrollViewer>
        </Grid>
    </c:BusyAreaControl>
</ru:ReactiveUserControl>