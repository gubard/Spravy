<controls1:MainReactiveUserControl x:TypeArguments="viewModels:ToDoItemGroupViewModel"
                                   xmlns="https://github.com/avaloniaui"
                                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                   xmlns:viewModels="clr-namespace:Spravy.Ui.ViewModels"
                                   xmlns:controls1="clr-namespace:Spravy.Ui.Controls"
                                   xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
                                   mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                                   x:Class="Spravy.Ui.Views.ToDoItemGroupView"
                                   x:DataType="viewModels:ToDoItemGroupViewModel">
    <Design.DataContext>
        <viewModels:ToDoItemGroupViewModel />
    </Design.DataContext>

    <Interaction.Behaviors>
        <EventTriggerBehavior EventName="Initialized">
            <InvokeCommandAction Command="{Binding InitializedCommand}" />
        </EventTriggerBehavior>
    </Interaction.Behaviors>

    <Grid RowDefinitions="Auto, Auto,*">
        <ContentControl Content="{Binding ToDoItemHeaderView}" />

        <StackPanel Grid.Row="1">
            <ContentControl Content="{Binding Path}"
                            Margin="5"
                            HorizontalAlignment="Center" />
            <ComboBox Classes="Outline"
                      assists:ComboBoxAssist.Label="Type"
                      SelectedItem="{Binding Type}"
                      ItemsSource="{Binding ToDoItemTypes}" />
            <controls1:EditableTextBlock AcceptsReturn="True"
                                         AcceptsTab="True"
                                         TextWrapping="Wrap"
                                         Text="{Binding Description, Mode=TwoWay}"
                                         Watermark="Description"
                                         Margin="5" />
        </StackPanel>

        <ContentControl Grid.Row="2" Content="{Binding ToDoSubItemsView}" />
    </Grid>
</controls1:MainReactiveUserControl>