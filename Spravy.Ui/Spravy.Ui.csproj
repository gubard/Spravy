<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
        <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
    </PropertyGroup>

    <ItemGroup>
        <AvaloniaResource Include="Assets\**" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="AutoMapper" Version="12.0.1" />
        <PackageReference Include="Avalonia" Version="11.0.4" />
        <PackageReference Include="Avalonia.ReactiveUI" Version="11.0.4" />
        <PackageReference Include="Avalonia.Themes.Fluent" Version="11.0.4" />
        <PackageReference Include="Avalonia.Fonts.Inter" Version="11.0.4" />
        <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
        <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="11.0.4" />
        <PackageReference Include="Avalonia.Xaml.Interactions" Version="11.0.2" />
        <PackageReference Include="Avalonia.Xaml.Interactions.DragAndDrop" Version="11.0.2" />
        <PackageReference Include="Avalonia.Xaml.Interactions.Responsive" Version="11.0.2" />
        <PackageReference Include="DialogHost.Avalonia" Version="0.7.6" />
        <PackageReference Include="Google.Protobuf" Version="3.24.2" />
        <PackageReference Include="Grpc.Net.Client" Version="2.56.0" />
        <PackageReference Include="Grpc.Net.Client.Web" Version="2.56.0" />
        <PackageReference Include="Grpc.Net.ClientFactory" Version="2.56.0" />
        <PackageReference Include="Grpc.Tools" Version="2.57.0">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Material.Avalonia" Version="3.0.0-avalonia11-preview6.19-nightly" />
        <PackageReference Include="Material.Icons.Avalonia" Version="2.0.1" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="7.0.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Spravy.Authentication.Domain.Core\Spravy.Authentication.Domain.Core.csproj" />
      <ProjectReference Include="..\Spravy.Domain.Di\Spravy.Domain.Di.csproj" />
      <ProjectReference Include="..\Spravy.ToDo.Domain.Client\Spravy.ToDo.Domain.Client.csproj" />
      <ProjectReference Include="..\Spravy.ToDo.Domain.Mapper\Spravy.ToDo.Domain.Mapper.csproj" />
      <ProjectReference Include="..\Spravy.ToDo.Domain\Spravy.ToDo.Domain.csproj" />
    </ItemGroup>

    <ItemGroup>
      <UpToDateCheckInput Remove="Assets\avalonia-logo.ico" />
      <UpToDateCheckInput Remove="Styles\Theme.axaml" />
    </ItemGroup>

    <ItemGroup>
        <Protobuf Include="..\Spravy.Authentication.Domain\Protos\authentication.proto" GrpcServices="Client" ProtoRoot="..\Spravy.Authentication.Domain">
            <Link>Protos/authentication.proto</Link>
        </Protobuf>
        <Protobuf Include="..\Spravy.Authentication.Domain\Protos\authentication_messages.proto" GrpcServices="None" ProtoCompile="False">
            <Link>Protos/authentication_messages.proto</Link>
        </Protobuf>
    </ItemGroup>

    <ItemGroup>
      <Reference Include="Ninject">
        <HintPath>..\..\..\.nuget\packages\ninject\3.3.6\lib\netstandard2.0\Ninject.dll</HintPath>
      </Reference>
    </ItemGroup>
</Project>
