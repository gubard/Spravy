<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Spravy.Ui.Features.PasswordGenerator.ViewModels"
             xmlns:c="clr-namespace:Spravy.Ui.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Spravy.Ui.Features.PasswordGenerator.Views.DeletePasswordItemView"
             x:DataType="vm:DeletePasswordItemViewModel">
    <c:GroupBoxControl>
        <c:GroupBoxControl.Header>
            <TextBlock Classes="alignment-left"
                       Text="{Binding Item, Converter={StaticResource ObjectToLocalizationConverter}, ConverterParameter=DeletePasswordItemView.Header}" />
        </c:GroupBoxControl.Header>
    </c:GroupBoxControl>
</UserControl>