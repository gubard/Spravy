<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Spravy.Ui.Controls">
    <ControlTheme x:Key="TimeSpanAddItemControlStyle" TargetType="c:TimeSpanAddItemControl">
        <Setter Property="Template">
            <ControlTemplate>
                <TimePicker SelectedTime="{TemplateBinding Time}" />
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type c:TimeSpanAddItemControl}"
                  BasedOn="{StaticResource TimeSpanAddItemControlStyle}"
                  TargetType="c:TimeSpanAddItemControl" />
</ResourceDictionary>