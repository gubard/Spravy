<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dh="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia">
    <Design.PreviewWith>
        <dh:DialogHost IsOpen="True">
            <Border Background="Blue" />

            <dh:DialogHost.DialogContent>
                <Border Height="500"
                        Width="500"
                        Background="Red" />
            </dh:DialogHost.DialogContent>
        </dh:DialogHost>
    </Design.PreviewWith>

    <Style Selector="dh|DialogHost">
        <Setter Property="Background" Value="#88000000" />
    </Style>

    <Style Selector="dh|DialogHost /template/ Rectangle#PART_ContentCover">
        <Setter Property="Fill" Value="Transparent" />
    </Style>
    
    <Style Selector="dh|DialogHost:is-open /template/ ContentPresenter#ContentPresenter">
        <Setter Property="Effect" Value="blur(20)" />
    </Style>

    <Style
        Selector="dh|DialogOverlayPopupHost > Border#PART_ContentBackground > ContentPresenter#PART_ContentPresenter">
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="BorderBrush" Value="{DynamicResource ExpanderHeaderBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
</Styles>