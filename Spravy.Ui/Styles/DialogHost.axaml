<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia">
    <Style Selector="dialogHostAvalonia|DialogOverlayPopupHost">
        <Setter Property="Background" Value="{DynamicResource SukiGlassCardBackground}" />
    </Style>

    <Style
        Selector="dialogHostAvalonia|DialogOverlayPopupHost > Border#PART_ContentBackground > ContentPresenter#PART_ContentPresenter">
        <Setter Property="CornerRadius" Value="20" />
    </Style>
</Styles>