<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Spravy.Ui.Controls">
    <ControlTheme x:Key="GridColumnStackControlStyle" TargetType="c:GridColumnStackControl">
        <Setter Property="Template">
            <ControlTemplate>
                <ItemsControl x:Name="PART_ItemsControl"
                              ItemsSource="{TemplateBinding ItemsSource}"
                              ItemTemplate="{TemplateBinding ItemTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type c:GridColumnStackControl}"
                  BasedOn="{StaticResource GridColumnStackControlStyle}"
                  TargetType="c:GridColumnStackControl" />
</ResourceDictionary>