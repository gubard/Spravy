<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="TextBlock.text-wrap">
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style Selector="TextBlock.field">
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="6,0,0,3" />
    </Style>

    <Style Selector="TextBlock.h1">
        <Setter Property="FontSize" Value="36.4" />
    </Style>

    <Style Selector="TextBlock.h2">
        <Setter Property="FontSize" Value="28" />
    </Style>

    <Style Selector="TextBlock.h3">
        <Setter Property="FontSize" Value="22.4" />
    </Style>

    <Style Selector="TextBlock.h4">
        <Setter Property="FontSize" Value="19.6" />
    </Style>

    <Style Selector="TextBlock.h5">
        <Setter Property="FontSize" Value="16.8" />
    </Style>

    <Style Selector="TextBlock.h6">
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style Selector="TextBlock.small">
        <Setter Property="FontSize" Value="11.2" />
    </Style>
</Styles>