<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector=":is(TemplatedControl).bold">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    
    <Style Selector=":is(TemplatedControl).accept-low">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlHighlightListAccentLowBrush}" />
    </Style>
    
    <Style Selector=":is(TemplatedControl).accept-high">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlHighlightListAccentHighBrush}" />
    </Style>
    
    <Style Selector=":is(TemplatedControl).accept-medium">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlHighlightListAccentMediumBrush}" />
    </Style>
</Styles>