<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Spravy.Ui.Controls">
    <ControlTheme x:Key="IntegerSelectorControlStyle" TargetType="c:IntegerSelectorControl">
        <Setter Property="Template">
            <ControlTemplate>
                <ToggleButton x:Name="PART_ToggleButton" Content="{TemplateBinding Value}" />
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type c:IntegerSelectorControl}"
                  BasedOn="{StaticResource IntegerSelectorControlStyle}"
                  TargetType="c:IntegerSelectorControl" />
</ResourceDictionary>